{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["shared/types/lexicons/**"],
  "workspaces": {
    ".": {
      "entry": [
        "app/app.vue",
        "app/error.vue",
        "app/pages/**/*.vue",
        "app/components/**/*.vue",
        "app/composables/**/*.ts",
        "app/middleware/**/*.ts",
        "app/plugins/**/*.ts",
        "app/utils/**/*.ts",
        "server/**/*.ts",
        "modules/**/*.ts",
        "config/**/*.ts",
        "i18n/**/*.ts",
        "lunaria.config.ts",
        "pwa-assets.config.ts",
        ".lighthouserc.cjs",
        "lighthouse-setup.cjs",
        "uno-preset-rtl.ts",
        "scripts/**/*.ts",
        "lunaria/**/*.ts",
        "shared/**/*.ts"
      ],
      "project": ["**/*.{ts,vue,cjs,mjs}"],
      "ignoreDependencies": [
        "@iconify-json/*",
        "@vercel/kv",
        "@voidzero-dev/vite-plus-core",
        "h3",
        "puppeteer",
        "unplugin-vue-router",
        "vite-plugin-pwa",
        "vue-router"
      ],
      "ignoreUnresolved": ["#components"]
    },
    "cli": {
      "project": ["src/**/*.ts"]
    },
    "docs": {
      "entry": ["app/**/*.{ts,vue}"],
      "project": ["**/*.{ts,vue}"],
      "ignoreDependencies": ["docus", "better-sqlite3"]
    }
  }
}
